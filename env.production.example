# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN - NANOMED
# ========================================

# ========================================
# CONFIGURACIÓN DE LA API
# ========================================
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# ========================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ========================================
DB_SERVER=tu-servidor-produccion.database.windows.net
DB_USER=tu-usuario-produccion
DB_PASSWORD=tu-password-produccion
DB_NAME=bddnanomed_PROD
DB_PORT=1433

# ========================================
# CONFIGURACIÓN JWT
# ========================================
JWT_SECRET=tu-jwt-secret-super-seguro-para-produccion
JWT_REFRESH_SECRET=tu-jwt-refresh-secret-super-seguro-para-produccion

# ========================================
# CONFIGURACIÓN AZURE STORAGE
# ========================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=tu-cuenta;AccountKey=tu-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=nanomed-files

# ========================================
# CONFIGURACIÓN TRANSBANK
# ========================================
TRANSBANK_COMMERCE_CODE=tu-commerce-code
TRANSBANK_API_KEY=tu-api-key
TRANSBANK_ENVIRONMENT=production

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu-email@gmail.com
MAIL_PASS=tu-password-app

# ========================================
# CONFIGURACIÓN DEL CLIENTE
# ========================================
CLIENT_URL=https://tu-dominio.com
NEXT_PUBLIC_API_BASE_URL=https://api.tu-dominio.com
NEXT_PUBLIC_CLIENT_URL=https://tu-dominio.com

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
CORS_ORIGIN=https://tu-dominio.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/nanomed/app.log

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090
